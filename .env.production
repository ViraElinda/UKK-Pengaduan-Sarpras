#--------------------------------------------------------------------
# VPS Production Environment Configuration
# Copy this to your VPS and rename to .env
# Update the values according to your VPS setup
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# Update this to your VPS domain/IP
app.baseURL = 'https://viraelinda.my.id'
# or if using IP: app.baseURL = 'http://your-server-ip'

# Force HTTPS on production (recommended)
app.forceGlobalSecureRequests = true

# Enable CSP for security
app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE - UPDATE THESE VALUES FOR YOUR VPS
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = pengaduan_sarpras
database.default.username = ci_user
database.default.password = root
database.default.DBDriver = MySQLi
database.default.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION - GENERATE NEW KEY FOR PRODUCTION
#--------------------------------------------------------------------

# Generate with: php spark key:generate
encryption.key = 

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.cookieName = 'pengaduan_session'
session.expiration = 7200
session.savePath = null

#--------------------------------------------------------------------
# SECURITY SETTINGS FOR PRODUCTION
#--------------------------------------------------------------------

# Enable error logging but hide from users
logger.threshold = 4
CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# NOTES FOR VPS DEPLOYMENT:
#--------------------------------------------------------------------
# 1. Update database credentials
# 2. Set proper baseURL (domain or IP)
# 3. Generate new encryption.key
# 4. Ensure MySQL service is running
# 5. Create database: pengaduan_sarpras
# 6. Run: php spark migrate
# 7. Set proper file permissions (755 for folders, 644 for files)
# 8. Configure web server (Apache/Nginx)